{
  "name": "Hanzisize",
  "version": "0.1.0",

  "description": "An extension to control the minimum size of chinese text on the page without changing size of other elements.",
  "permissions": [
    "activeTab",
    "storage"
  ],

  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Hanzisize",
    "default_icon": "icons/icon16.png"
  },
  
  "icons": { 
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
   "128": "icons/icon128.png" 
  },
  "offline_enabled": true,
  "manifest_version": 2
}