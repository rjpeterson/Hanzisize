{
  "name": "Hanzisize",
  "version": "0.0.1",

  "description": "An extension to control the minimum size of chinese text on the page without changing size of other elements.",
  "permissions": [
    "<all_urls>",
    "declarativeContent",
    "activeTab",
    "storage"
  ],

  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
      }
    ],

  "background": { 
    "scripts": [ "background.js" ], 
    "persistent": false 
  },

  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Hanzisize",
    "default_icon": {}
  },
  
  "icons": {},

  "storage": {},

  "offline_enabled": true,
  "manifest_version": 2
}